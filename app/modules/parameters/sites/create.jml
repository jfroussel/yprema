<div class="modal-header bgm-bluegray m-b-20 ">
    <h4 class="modal-title c-white t-uppercase">Ajouter un nouveau site</h4>
</div>
<div class="modal-body">
    <form class="form-horizontal" j-name="sites"  id="sites">

        <div class="row">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-edit"></i></span>
                    <div class="fg-line">
                        <input class="form-control" placeholder="Code" name="code" type="text">
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-edit"></i></span>
                    <div class="fg-line">
                        <input class="form-control" placeholder="Description" name="description" type="text">
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="modal-footer">
            <p>
                <button type="submit" class="btn btn-success">Ajouter</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
            </p>
        </div>
    </form>
</div>